<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/layout_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/background_send"
        android:gravity="end"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_sender_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:text="35"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_sender_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apr 20, 2017, 17:33"
            android:textColor="#666666" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_receiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_receive"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_receiver_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:text="Biletul pentru linia 35 a fost activat. Valabil pana la 18:18 in 05/04/2017. Cost total:0.50 EUR+Tva. Cod confirmare:852447"
            android:textColor="#464646"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_receiver_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Apr 20, 2017, 17:33"
            android:textColor="#666666" />

    </LinearLayout>

</RelativeLayout>
